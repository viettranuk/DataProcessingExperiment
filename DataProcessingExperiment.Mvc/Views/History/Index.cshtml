@model DataProcessingExperiment.Models.ViewModels.UploadHistoryViewModel

@{ ViewBag.Title = "History"; }

<section class="row">
    <div class="col-lg-12">
        <article id="uploadForm" class="table-responsive">
            <table class="table table-striped table-custom">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Description</th>
                        <th>Size</th>
                        <th>Imported Date</th>
                        <th>Imported Time</th>
                        <th>Details</th>
                    </tr>
                </thead>
                @*<tfoot>
                    <tr>
                        <td colspan="6">&nbsp;</td>
                    </tr>
                </tfoot>*@
                <tbody>
                    @if ((Model.UploadHistories != null) && Model.UploadHistories.Any())
                    {
                        foreach (var item in Model.UploadHistories)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Size</td>
                                <td>@item.ImportedOn.ToShortDateString()</td>
                                <td>@item.ImportedOn.ToShortTimeString()</td>
                                <td><a href="@Url.Action("ViewTransactionLog", "History", new { fileId = item.FileId })">View</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">No history found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </article>
    </div>
</section>

@section pageScripts {

    <script type="text/javascript">
        $(document).ready(function () {
            $("#allMenuItems > li").removeClass("active");
            $("#historyMenuItem").addClass("active");
        });
    </script>
}